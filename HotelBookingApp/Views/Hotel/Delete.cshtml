@model HotelBookingApp.Models.Hotel

<h2>Delete Hotel</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>@Model.Name</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            Location
        </dt>
        <dd class="col-sm-10">
            @Model.Location
        </dd>
        <dt class="col-sm-2">
            Rating
        </dt>
        <dd class="col-sm-10">
            @Model.Rating
        </dd>
        <dt class="col-sm-2">
            Picture
        </dt>
        <dd class="col-sm-10">
            @if (Model.Picture != null)
            {
                <img src="data:image;base64,@Model.Picture" alt="@Model.Name" class="img-fluid" />
            }
        </dd>
        <dt class="col-sm-2">
            Rooms
        </dt>
        <dd class="col-sm-10">
            @foreach (var room in Model.Rooms)
            {
                <div class="mt-3">
                    <h5>Type: @room.Type</h5>
                    <p>Available Rooms: @room.AvailableRooms</p>
                    <p>Price: $@room.Price</p>
                    @if (room.Picture != null)
                    {
                        <img src="data:image;base64,@room.Picture" alt="@room.Type" class="img-thumbnail" style="max-height: 200px;" />
                    }
                </div>
            }
        </dd>
    </dl>
</div>
<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
