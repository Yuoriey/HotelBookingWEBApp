@model HotelBookingApp.Models.HotelListViewModel
@{
    ViewData["Title"] = "Home";
}
<div class="jumbotron text-center mt-7">
    <h1 class="display-4">Find the Best Hotel Deals</h1>
    <p class="lead">We compare hotel prices from hundreds of sites to find you the best deals.</p>
    <hr class="my-4">
    <div id="searchContainer">
        <form asp-action="Index" method="get" class="form-inline justify-content-center">
            <div class="form-group mb-2">
                <label for="searchQuery" class="sr-only">Search Hotels</label>
                <input type="text" name="searchQuery" class="form-control" placeholder="Search hotels..." value="@Model.SearchQuery" />
            </div>
            <button type="submit" class="btn btn-primary mb-2 ml-2">Search</button>
        </form>
    </div>
</div>

<div id="hotel-list">
    @await Html.PartialAsync("_HotelListPartial", Model)
</div>

