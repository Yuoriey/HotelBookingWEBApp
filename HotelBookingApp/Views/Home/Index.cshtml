    <!-- Template Javascript -->
    <script src="js/main.js"></script>
    <script>


        // Get the button
        var mybutton = document.getElementById("scrollTopBtn");

        // When the user scrolls down 20px from the top of the document, show the button
        window.onscroll = function () { scrollFunction() };

        function scrollFunction() {
            if (document.body.scrollTop > 20 || document.documentElement.scrollTop > 20) {
                mybutton.style.display = "block";
            } else {
                mybutton.style.display = "none";
            }
            // Sticky search form
            var searchContainer = document.getElementById("searchContainer");
            var navbar = document.querySelector('.navbar');
            var jumbotron = document.querySelector('.jumbotron');
            var navbarHeight = navbar.offsetHeight;
            var jumbotronBottom = jumbotron.offsetTop + jumbotron.offsetHeight;

            if (window.pageYOffset > jumbotronBottom - navbarHeight) {
                searchContainer.classList.add("sticky-search");
            } else {
                searchContainer.classList.remove("sticky-search");
            }
        }

        // When the user clicks on the button, scroll to the top of the document
        function topFunction() {
            window.scrollTo({ top: 0, behavior: 'smooth' });
        }

        window.loadPage = function (page) {
            var searchQuery = $("input[name='searchQuery']").val();
            $.get("@Url.Action("LoadHotels", "Home")", { searchQuery: searchQuery, page: page }, function (data) {
                $("#hotel-list").html(data);
                topFunction(); // Scroll to top after loading new page
            });
        }
    </script>
}


