@model IEnumerable<HotelBookingApp.Models.Hotel>

@foreach (var hotel in Model)
{
    <div class="col-md-4 mb-3">
        <div class="card">
            <img class="card-img-top" src="data:image;base64,@hotel.Picture" alt="Hotel Image" />
            <div class="card-body">
                <h5 class="card-title">@hotel.Name</h5>
                <p class="card-text">@hotel.Location</p>
                <p class="card-text">Rating: @hotel.Rating</p>
                <p class="card-text">Available Rooms:</p>
                <ul>
                    @foreach (var room in hotel.Rooms)
                    {
                        <li>@room.Type - @room.Price $</li>
                    }
                </ul>
                <a asp-controller="Booking" asp-action="Create" asp-route-hotelId="@hotel.Id" class="btn btn-primary">Book</a>
            </div>
        </div>
    </div>
}
